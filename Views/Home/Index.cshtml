@{
    ViewData["Title"] = "Welcome to Agri-Energy Connect";
}

<!-- 🌾 Hero Section -->
<div class="text-center py-5" style="background: url('/images/bg-dashboard.jpg') no-repeat center center; background-size: cover; color: white;">
    <div class="container">
        <h1 class="display-3 fw-bold">Welcome to Agri-Energy Connect</h1>
        <p class="lead">Bridging sustainable agriculture with green energy through digital innovation.</p>
        <hr class="my-4" style="border-color: white;" />
        <div class="d-flex justify-content-center gap-3">
            <a class="btn btn-outline-light btn-lg" asp-area="Identity" asp-page="/Account/Login">Login</a>
            <a class="btn btn-success btn-lg" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </div>
    </div>
</div>

<!-- 🌟 About Section -->
<div class="container my-5">
    <h2 class="text-center mb-4">Why Agri-Energy Connect?</h2>
    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <i class="bi bi-graph-up-arrow display-4 text-success"></i>
            <h4 class="mt-3">Empower Farmers</h4>
            <p>Farmers can manage product records and connect with green energy innovations.</p>
        </div>
        <div class="col-md-4 mb-4">
            <i class="bi bi-globe display-4 text-success"></i>
            <h4 class="mt-3">Promote Sustainability</h4>
            <p>Encourages renewable energy adoption for a cleaner and greener agriculture sector.</p>
        </div>
        <div class="col-md-4 mb-4">
            <i class="bi bi-person-badge display-4 text-success"></i>
            <h4 class="mt-3">Support Employees</h4>
            <p>Employees can register farmers, review product data, and generate insights easily.</p>
        </div>
    </div>
</div>
