@model IEnumerable<AgriEnergyConnect.Models.Product>

@{
    Layout = "_Layout";
    ViewData["Title"] = "My Products";
}

<!-- 🧾 Header Section -->
<div class="text-center py-5" style="background: url('/images/bg-products.jpg') no-repeat center center; background-size: cover; color: white;">
    <div class="container">
        <h1 class="display-4 fw-bold">My Products</h1>
        <p class="lead">Review and manage your farm products in one place.</p>
    </div>
</div>

<!-- 📦 Product List Section -->
<div class="container my-5">
    @if (!Model.Any())
    {
        <div class="alert alert-info text-center shadow-sm">
            <i class="bi bi-box-seam display-6 text-secondary"></i><br />
            You haven't added any products yet.
            <div class="mt-3">
                <a asp-controller="Product" asp-action="Create" class="btn btn-success">Add Your First Product</a>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow">
            <div class="card-body">
                <table class="table table-hover table-bordered align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Production Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Category</td>
                                <td>@item.ProductionDate.ToString("yyyy-MM-dd")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
