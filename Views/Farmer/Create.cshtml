@model AgriEnergyConnect.Models.Farmer

@{
    Layout = "_Layout";
    ViewData["Title"] = "Add New Farmer";
}

<!-- 🧑‍🌾 Header Section -->
<div class="text-center py-5" style="background: url('/images/bg-products.jpg') no-repeat center center; background-size: cover; color: white;">
    <div class="container">
        <h1 class="display-4 fw-bold">Add New Farmer</h1>
        <p class="lead">Capture and register farmers into the Agri-Energy Connect ecosystem.</p>
    </div>
</div>

<!-- 📝 Form Section -->
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <!-- 👤 Farmer Name -->
                        <div class="form-floating mb-3">
                            <input asp-for="Name" class="form-control" placeholder="Full Name" />
                            <label asp-for="Name">Full Name</label>
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <!-- 📧 Farmer Email -->
                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                            <label asp-for="Email">Email</label>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <!-- 📍 Location -->
                        <div class="form-floating mb-3">
                            <input asp-for="Location" class="form-control" placeholder="Province or Area" />
                            <label asp-for="Location">Location</label>
                            <span asp-validation-for="Location" class="text-danger small"></span>
                        </div>

                        <!-- ✅ Submit Button -->
                        <button type="submit" class="btn btn-success w-100 mt-3">Save Farmer</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
